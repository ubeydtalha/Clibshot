# Application Configuration
APP_NAME=ClipShot API
VERSION=0.1.0
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=tauri://localhost,http://localhost:5173,http://localhost:3000

# Database
DATABASE_URL=sqlite+aiosqlite:///./clipshot.db

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Plugins
PLUGINS_DIR=./plugins
PLUGIN_CACHE_TTL=300

# AI Runtime
AI_MODELS_DIR=./models
AI_DEFAULT_RUNTIME=onnx

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# Security
SECRET_KEY=change-this-in-production-use-a-secure-random-key

# Logging
LOG_LEVEL=INFO
