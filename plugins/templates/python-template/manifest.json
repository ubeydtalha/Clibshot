{
  "$schema": "https://clipshot.io/schemas/manifest.v2.schema.json",
  "id": "com.example.my-plugin",
  "name": "My Plugin",
  "version": "1.0.0",
  "api_version": "v1",
  "type": "optional",
  "category": "enhancement",
  "description": {
    "en": "A brief description of what your plugin does"
  },
  "author": {
    "name": "Your Name",
    "email": "you@example.com",
    "url": "https://yourwebsite.com"
  },
  "repository": "https://github.com/yourusername/your-plugin",
  "license": "MIT",
  "keywords": ["example", "template"],
  "entry": {
    "backend": "src/main.py"
  },
  "permissions": {
    "screen": { "level": "none" },
    "microphone": { "level": "none" },
    "filesystem": {
      "level": "limited",
      "paths": ["$PLUGIN_DATA"],
      "reason": {
        "en": "Store plugin data"
      }
    },
    "network": { "level": "none" },
    "gpu": { "level": "none" },
    "system": { "level": "none" }
  },
  "settings": {
    "schema": "config.schema.json",
    "defaults": {
      "enabled": true
    }
  },
  "localization": {
    "supported": ["en"],
    "fallback": "en",
    "path": "locales/"
  },
  "platforms": ["windows", "linux", "macos"],
  "engines": {
    "clipshot": ">=1.0.0",
    "python": ">=3.11"
  }
}
